@inherits LayoutComponentBase
@using Microsoft.FluentUI.AspNetCore.Components


<FluentTooltipProvider />
<FluentLayout>
    <FluentHeader>
        Koncsik Smart Lamp control V2
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu/>
        <FluentBodyContent Class="body-content">
            <ErrorBoundary>
                <ChildContent>
                    <FluentMessageBarProvider Section="MESSAGES_TOP" />
                    <div class="content">
                        @Body
                    </div>
                    <FluentToastProvider MaxToastCount="10" />
                    
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter >
        <FluentStack Orientation="Orientation.Horizontal" Width="100%" Style="bottom: 0; padding-left: 10px">
            <div class="link1">
                <a href="https://github.com/BenKoncsik" target="_blank">GitHub</a>
            </div>
            <div class="link2">
                <a href="https://github.com/BenKoncsik/Arduino_uno_NX_display_nepoixel_led_automazic_on_off/tree/RPI3/RPI3_ASP.NET" target="_blank">About Project</a>
            </div>
        </FluentStack>
        
    </FluentFooter>
</FluentLayout>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
